<div>
    <h1 class="text-center font-semibold m-2">
        Edit game  
    </h1>
    <% if session[:errors_game_id] == @game.id %>
        <ul>
            <% session[:errors_game_messages].each do |error| %>
                <div class="bg-gray-300 p-2 rounded-md m-1">   
                    <li class="text-red-500 ">
                        <%= error %>
                    </li>
                </div>
            <% end %>
        </ul>
    <% end %>
    <div class="p-2 bg-gray-400 rounded-lg">
        <%= form_with model: @game do |form| %>
            <%= form.hidden_field :game_set_id, value: @game.game_set_id %>
            <div class="flex flex-row justify-between space-x-2 w-full">
                <div class="flex flex-col w-full space-y-2">
                    <h3 class="text-center">N</h3>
                    <%= form.label :Spades, class: "text-sm text-center" %>
                    <%= form.text_field :n_spades, class: "py-1 px-2 rounded-md", size: "3x5", :value => @data["north"]["spades"] %>
                    <%= form.label :Hearts, class: "text-sm text-center" %>
                    <%= form.text_field :n_hearts, class: "py-1 px-2 rounded-md", size: "3x5", :value => @data["north"]["hearts"] %>
                    <%= form.label :Diamonds, class: "text-sm text-center" %>
                    <%= form.text_field :n_diamonds, class: "py-1 px-2 rounded-md", size: "3x5", :value => @data["north"]["diamonds"] %>
                    <%= form.label :Clubs, class: "text-sm text-center" %>
                    <%= form.text_field :n_clubs, class: "py-1 px-2 rounded-md", size: "3x5", :value => @data["north"]["clubs"] %>
                </div>
                <div class="flex flex-col  w-full space-y-2">
                    <h3 class="text-center">E</h3>
                    <%= form.label :Spades, class: "text-sm text-center" %>
                    <%= form.text_field :e_spades, class: "py-1 px-2 rounded-md", size: "3x5", :value => @data["east"]["spades"] %>
                    <%= form.label :Hearts, class: "text-sm text-center" %>
                    <%= form.text_field :e_hearts, class: "py-1 px-2 rounded-md", size: "3x5", :value => @data["east"]["hearts"] %>
                    <%= form.label :Diamonds, class: "text-sm text-center" %>
                    <%= form.text_field :e_diamonds, class: "py-1 px-2 rounded-md", size: "3x5", :value => @data["east"]["diamonds"] %>
                    <%= form.label :Clubs, class: "text-sm text-center" %>
                    <%= form.text_field :e_clubs, class: "py-1 px-2 rounded-md", size: "3x5", :value => @data["east"]["clubs"] %>
                </div>
                <div class="flex flex-col  w-full space-y-2">
                    <h3 class="text-center">S</h3>
                    <%= form.label :Spades, class: "text-sm text-center" %>
                    <%= form.text_field :s_spades, class: "py-1 px-2 rounded-md", size: "3x5", :value => @data["south"]["spades"] %>
                    <%= form.label :Hearts, class: "text-sm text-center" %>
                    <%= form.text_field :s_hearts, class: "py-1 px-2 rounded-md", size: "3x5", :value => @data["south"]["hearts"] %>
                    <%= form.label :Diamonds, class: "text-sm text-center" %>
                    <%= form.text_field :s_diamonds, class: "py-1 px-2 rounded-md", size: "3x5", :value => @data["south"]["diamonds"] %>
                    <%= form.label :Clubs, class: "text-sm text-center" %>
                    <%= form.text_field :s_clubs, class: "py-1 px-2 rounded-md", size: "3x5", :value => @data["south"]["clubs"] %>
                </div>
                <div class="flex flex-col  w-full space-y-2">
                    <h3 class="text-center">W</h3>
                    <%= form.label :Spades, class: "text-sm text-center" %>
                    <%= form.text_field :w_spades, class: "py-1 px-2 rounded-md", size: "3x5", :value => @data["west"]["spades"] %>
                    <%= form.label :Hearts, class: "text-sm text-center" %>
                    <%= form.text_field :w_hearts, class: "py-1 px-2 rounded-md", size: "3x5", :value => @data["west"]["hearts"] %>
                    <%= form.label :Diamonds, class: "text-sm text-center" %>
                    <%= form.text_field :w_diamonds, class: "py-1 px-2 rounded-md", size: "3x5", :value => @data["west"]["diamonds"] %>
                    <%= form.label :Clubs, class: "text-sm text-center" %>
                    <%= form.text_field :w_clubs, class: "py-1 px-2 rounded-md", size: "3x5", :value => @data["west"]["clubs"] %>
                </div>
            </div>
            <div class="my-2 grid grid-cols-2 grid-rows-1">
                <div class="flex flex-col justify-center">
                    <h3 class="text-center">Dealer</h3>
                    <div>
                        <div class="field flex flex-row justify-between space-x-2">
                            <div>
                                <%= form.label :dealer, "N", :value => "N" %>
                                <%= form.radio_button :dealer, "N", :checked => @game.dealer == "N" %>
                            </div>
                            <div>
                                <%= form.label :dealer, "E", :value => "E" %>
                                <%= form.radio_button :dealer, "E", :checked =>  @game.dealer == "E" %>
                            </div>
                            <div>
                                <%= form.label :dealer, "S", :value => "S" %>
                                <%= form.radio_button :dealer, "S", :checked =>  @game.dealer == "S" %>
                            </div>
                            <div>
                                <%= form.label :dealer, "W", :value => "W" %>
                                <%= form.radio_button :dealer, "W", :checked =>  @game.dealer == "W" %>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="flex flex-col justify-center items-center m-4">
                    <div>
                        <%= form.check_box :vulnerable_ns, checked: @game.vulnerable_north_south  %>
                        <%= form.label :vulnerable_ns, "Vulnerable N/S" %>
                    </div>
                    <div>
                        <%= form.check_box :vulnerable_ew, checked: @game.vulnerable_east_west %>
                        <%= form.label :vulnerable_ew, "Vulnerable E/W" %>
                    </div>
                </div>
            </div>
            <div class="text-center bg-green-500 p-2 rounded-md">
                <%= form.submit %>
            </div>
        <% end %>
    </div>
</div>
