<div class="flex flex-row p-1 mx-2 bg-slate-500 rounded-md my-1" id="game_set_<%=game_set.id%>">
    <p class="min-w-[50%] text-center"><%= game_set.name %></p>
    <div class="flex flex-row content-between ml-4">
        <div>
            <button class="bg-green-500  rounded-md px-1 mx-2">
                <%= link_to "Show", game_set_path(game_set) %>
            </button>
        </div>
        <div>
            <button class="bg-yellow-500  rounded-md px-1 mx-2">
                <%= link_to "Edit", edit_game_set_path(game_set) %>
            </button>
        </div>
        <div>
            <button data-reflex="click->Counter#delete_game_set"
                data-game_set-id="<%= game_set.id %>"
                class="bg-red-500  rounded-md px-1 mx-2">
                Delete
            </button>
        </div>
    </div>
</div>
