<div class="flex flex-row p-1 mx-2 bg-slate-500 rounded-md my-1" id="game_set_<%=game_set.id%>">
    <p class="min-w-[25%] text-center"><%= game_set.name %></p>
    <p class="min-w-[25%] text-center">number of files: <%= game_set.game_files.count %></p>
    <div class="flex space-x-3 ml-4">
        <div>
            <button data-reflex="click->Counter#show_game_set"
                data-game_set-id="<%= game_set.id %>"
                class="bg-green-500  rounded-md px-1 mx-2">
                Show
            </button>
        </div>
        <div>
            <button data-reflex="click->Counter#edit_game_set"
                data-game_set-id="<%= game_set.id %>"
                class="bg-yellow-500  rounded-md px-1 mx-2">
                Edit
            </button>
        </div>
        <div>
            <button data-reflex="click->Counter#delete_game_set"
                data-game_set-id="<%= game_set.id %>"
                class="bg-red-500  rounded-md px-1 mx-2">
                Delete
            </button>
        </div>
    </div>
</div>
